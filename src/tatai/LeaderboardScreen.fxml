<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="1000.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tatai.LeaderboardController">
   <bottom>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="170.0">
               <children>
                  <Label text="Select Level:">
                     <font>
                        <Font size="35.0" />
                     </font>
                  </Label>
               </children></HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Button fx:id="btnShowEasyCurrent" mnemonicParsing="false" onAction="#showEasyCurrentLeaders" text="Current Session - Easy">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnShowHardCurrent" mnemonicParsing="false" onAction="#showHardCurrentLeaders" text="Current Session - Hard">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children></HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Button fx:id="btnShowEasy" mnemonicParsing="false" onAction="#showEasyAllTimeLeaders" text="All Time - Easy">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnShowHard" mnemonicParsing="false" onAction="#showHardAllTimeLeaders" text="All Time - Hard">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
   <top>
      <HBox prefHeight="117.0" prefWidth="1000.0" spacing="30.0">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <VBox prefHeight="200.0" prefWidth="955.0">
               <children>
                  <Button fx:id="btnExit" mnemonicParsing="false" onAction="#returnHomeScreen" text="Exit Leaderboard" />
                  <Label fx:id="leaderboardTitle" text="All Time Leaderboard - Easy">
                     <font>
                        <Font size="48.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
   </top>
   <center>
      <TableView fx:id="leadersList" prefHeight="675.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="75.0" />
          <TableColumn prefWidth="75.0" />
        </columns>
      </TableView>
   </center>
</BorderPane>
