<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="1000.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tatai.LeaderboardController">
   <top>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnExit" mnemonicParsing="false" onAction="#returnHomeScreen" styleClass="home-buttons" text="Home">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="leaderboardTitle" text="Scores for 'Easy' Level">
               <font>
                  <Font size="46.0" />
               </font>
               <VBox.margin>
                  <Insets top="-20.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="selectLevel" onAction="#loadLeaderboard" prefWidth="150.0" promptText="Select a level">
               <VBox.margin>
                  <Insets bottom="30.0" top="-20.0" />
               </VBox.margin>
            </ComboBox>
         </children>
         <padding>
            <Insets left="30.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <TableView fx:id="leadersList" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <placeholder>
            <Label text="" />
        </placeholder>
        <columns>
          <TableColumn editable="false" prefWidth="75.0" sortable="false" text="Rank" />
          <TableColumn editable="false" prefWidth="75.0" sortable="false" text="Player Name" />
            <TableColumn editable="false" prefWidth="75.0" sortable="false" text="Score / 10" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
